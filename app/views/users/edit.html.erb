<div class ="field-account">
 <h1>ユーザー編集</h1>

 <% if @user.errors.any? %>
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>

 <%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :name, "ユーザー名", class: "label" %><br>
    <%= f.text_field :name, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: "label" %><br>
    <%= f.email_field :email, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール", class: "label" %><br>
    <%= f.text_area :profile, class: "textarea" %>
  </div>

  <div class="field">
    <%= f.label :icon, "プロフィール画像", class: "label" %><br>
    <%= f.file_field :icon, class: "input" %>
  </div>
  
  <div class="field">
    <%= f.label :password,"現在のパスワード" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"新しいパスワード" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password,"パスワード確認" %><br>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <%= f.submit "更新", class:"btn-room" %><br>
  <%= link_to 'マイページに戻る', user_path(current_user), class:"btn-room" %>
  <% end %>
</div>
